<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tanmay.womensecurity.Entity.Settings.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <TextView
        android:padding="10dp"
        android:clickable="true"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Emergency Contacts"
        android:textSize="20sp"
        android:id="@+id/emergency_contacts"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80000009">
    </View>

    <Switch
        android:padding="10dp"
        android:text="Real time tracking"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/real_time_tracking" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80000009">
    </View>
    <Switch
        android:padding="10dp"
        android:textSize="20sp"
        android:text="Scream Detection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scream_detection" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80000009">
    </View>
    <TextView
        android:clickable="true"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#000"
        android:text="Log out"
        android:textSize="20sp"
        android:id="@+id/log_out"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80000009">
    </View>
</LinearLayout>
